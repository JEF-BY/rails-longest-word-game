<div class="m-5">
  <h1 class="mb-3">New game</h1>
  <div class="d-flex mb-3">
    <p class="me-5"><%= @letters[0] %></p>
    <p class="me-5"><%= @letters[1] %></p>
    <p class="me-5"><%= @letters[2] %></p>
    <p class="me-5"><%= @letters[3] %></p>
    <p class="me-5"><%= @letters[4] %></p>
    <p class="me-5"><%= @letters[5] %></p>
    <p class="me-5"><%= @letters[6] %></p>
    <p class="me-5"><%= @letters[7] %></p>
    <p class="me-5"><%= @letters[8] %></p>
    <p class="me-5"><%= @letters[9] %></p>
  </div>
  <div>
    <form action="/score" method="post" data-turbo="false">
      <label for="longestword" class="form-label mb-3">What is the longest word you can find?</label>
      <div class="input-group">
        <%= hidden_field_tag :letters, @letters %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" id="longestword" class="form-control" name="word">
        <input type="submit" class="btn btn-white border" value="Play">
      </div>
    </form>
  </div>
</div>
